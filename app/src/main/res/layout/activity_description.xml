<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Description"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TitleForDescription"
        android:layout_alignParentTop="true"
        android:textSize="26sp"
        android:gravity="center"
        android:padding="12dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/arapey"
        android:textAllCaps="true"
        android:textColor="#2f2f2f"
    />
    <TextView
        android:id="@+id/Divider"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="#2f2f2f"
        android:layout_below="@id/TitleForDescription"

        />
    <ScrollView
        android:id="@+id/ScrollBox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/Divider"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/ImageForDescription"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TextForDescription"
                android:textColor="#757575"
                android:justificationMode="inter_word"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"
                />



        </LinearLayout>

    </ScrollView>
    <TextView
        android:id="@+id/PriceForDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:paddingRight="35dp"
        android:paddingLeft="7dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:background="@drawable/round_corners"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_alignRight ="@id/Divider"
        android:layout_alignTop ="@id/Divider"
        />

</RelativeLayout>