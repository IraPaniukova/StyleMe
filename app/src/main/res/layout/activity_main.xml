<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.cardview.widget.CardView
        style="@style/MainCardStyle"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#ebeaeb"
        android:id="@+id/card_hats"
        android:onClick="onClickHats">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                style="@style/CardImageStyle"
                android:src="@drawable/hat_main" />

            <TextView
                style="@style/CardTextStyle"
                android:text="Hats" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        style="@style/MainCardStyle"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#ebeaeb"
        android:id="@+id/card_sglasses"
        android:onClick="onClickSglasses">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                style="@style/CardImageStyle"
                android:src="@drawable/sglasses_main"/>
            <TextView
                style="@style/CardTextStyle"
                android:text="Sunglasses"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        style="@style/MainCardStyle"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#ebeaeb"
        android:id="@+id/card_bags"
        android:onClick="onClickBags">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                style="@style/CardImageStyle"
                android:src="@drawable/bag_main"/>
            <TextView
                style="@style/CardTextStyle"
                android:text="Bags"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>




</LinearLayout>